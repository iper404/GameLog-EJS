<!DOCTYPE html>
<html>
<head>
  <title>GameLog</title>
  <link rel="stylesheet" type="text/css" href="/stylesheets/main.css">
</head>
<body>
  <h1>Welcome to GameLog</h1>
  <p>Track the video games you're playing.</p>

  <!-- Log in as Guest Card -->
  <div class="guest-card">
    <p class="guest-card-title">Want to test the app out?</p>
    <form action="/users/login/guest" method="post">
      <button class="guest-card-button" type="submit">Log in as Guest</button>
    </form>
  </div>

  <!-- Login Card -->
  <div class="login-card">
    <% if (locals.errorMessage) { %>
      <p class="error-message"><%= errorMessage %></p>
    <% } %>
    <form action="/users/login" method="post">
      <p class="guest-card-title">Log in with your account: </p> 
      <label for="email">Email:</label>
      <input type="email" id="email" name="email" required>
      <br>
      <label for="password">Password:</label>
      <input type="password" id="password" name="password" required>
      <br>
      <button class="login-card-button" type="submit">Log In</button>
    </form>
  </div>

  <!-- Register Link -->
  <div class="register-link">
    <p>New to GameLog? <a class="register-anchor" href="/users/register">Register</a></p>
  </div>
</body>
</html>
